{
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": true,
    "lib": ["ES2021.String"]
  },
  "compileOnSave": true,
}